#:kivy 2.0.0
#:import Window kivy.core.window.Window

<Tela1>
    canvas:
        Color:
            rgba: 0, 0.592, 0.698, 1
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:
        AsyncImage:
            source: 'image/logo_inicial.png'
            size_hint: 1,0.3
            pos_hint: {'center_x':0.5, 'center_y':0.60}
        

        Button:
            id: trocar
            text: 'START'
            bold: True
            size_hint: None, None
            background_normal: 'image/botão_inicial.png'
            background_down: 'image/botão_inicial.png'
            background_color: 0, 0.592, 0.698, 1
            size: 300,50
            pos_hint: {'center_x':0.5, 'center_y':0.35}
            on_press: root.entrar_tela1()

<Tela2>
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        canvas:
            Color:
                rgba: 0, 0.592, 0.698, 1
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            orientation: 'vertical'
            size_hint: 1,0.2

            AsyncImage:
                source: 'image/logo_escuro.png'
                size_hint: 0.6,0.6
                pos_hint: {'center_x':0.5, 'center_y':0.30}
                
        #parte de baixo (geral)

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            #Informações de entrada
            
            BoxLayout:
                orientation: 'vertical'
                size_hint: 1,0.10

                TextInput:
                    size_hint: 0.9,1
                    hint_text: 'IMO DA EMBARCAÇÃO'
                    background_normal: 'image/imo_embarcacao.png'
                    background_down: 'image/imo_embarcacao.png'
                    multiline: False
                    pos_hint: {'center_x':0.5, 'center_y':0.50}

            #entrada das datas
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 0.9,0.17
                pos_hint: {'center_x':0.5, 'center_y':0.50}
                spacing: 20
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'DATA INICIAL'
                    TextInput:
                        hint_text: '09/10/2002'
                        background_normal: 'image/imo_embarcacao.png'
                    
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'DATA FINAL'
                    TextInput:
                        hint_text: '09/10/2022'
                        background_normal: 'image/imo_embarcacao.png'
            #Exibir informações capturadas
            BoxLayout:
                orientation: 'vertical'

                ProgressBar:
                    max: 100
                    value: 50
                    size_hint_x: 1
                    size_hint_y: 1
                
                Label:
                    text: 'Exibir informações aqui'
            
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.15
                Button:
                    text: 'buscar'
                    size_hint_x: 0.6
                    pos_hint: {'center_x':0.5, 'center_y':1}
                    background_normal: 'image/botão_inicial.png'
                    background_down: 'image/botão_inicial.png'
                    on_press: root.entrar_tela2()